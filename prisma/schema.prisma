generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppSettings {
  key   String @id
  value String
}

model Genre {
  id      Int    @id
  name    String
  games   Game[]
  gamesId Int?
}

model Platform {
  id           Int     @id
  name         String
  abbreviation String?
  games        Game[]
  gamesId      Int?
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model Game {
  id        Int        @id
  name      String
  cover     String?
  thumbnail String?
  genres    Genre[]
  platforms Platform[]
}

model Situation {
  id   Int    @id @default(autoincrement())
  name String @unique
}
